begin
	Row[2] = 1'b0;
end 
// Row[ 1 ]
initial
begin
	Row[1] = 1'b0;
end 
// Row[ 0 ]
initial
begin
	Row[0] = 1'b0;
end 

// valid_in
always
begin
	valid_in = 1'b0;
	valid_in = #50000 1'b1;
	#50000;
end 

keyboard_vlg_sample_tst tb_sample (
	.Column(Column),
