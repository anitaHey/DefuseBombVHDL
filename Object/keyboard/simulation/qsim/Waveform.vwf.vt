reg [2:0] Row;
reg valid_in;
// wires                                               
wire [3:0] num_out;
wire valid_out;

wire sampler;                             

// assign statements (if any)                          
keyboard i1 (
// port map - connection between master ports and signals/registers   
	.Column(Column),
	.num_out(num_out),
	.Row(Row),
	.valid_in(valid_in),
	.valid_out(valid_out)
);
// Column[ 2 ]
initial
begin
	Column[2] = 1'b0;
end 
// Column[ 1 ]
always
begin
	Column[1] = 1'b0;
	Column[1] = #50000 1'b1;
	#50000;
end 
// Column[ 0 ]
always
begin
	Column[0] = 1'b0;
	Column[0] = #50000 1'b1;
	#50000;
end 
// Row[ 2 ]
